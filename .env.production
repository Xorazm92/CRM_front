# Production Environment Configuration for Frontend

# API Configuration
VITE_API_BASE_URL=https://api.your-domain.com/api/v1
VITE_API_TIMEOUT=30000

# Application Configuration
VITE_APP_NAME="CRM System"
VITE_APP_VERSION="1.0.0"
VITE_APP_DESCRIPTION="Customer Relationship Management System"

# Feature Flags
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_ERROR_REPORTING=true
VITE_ENABLE_PERFORMANCE_MONITORING=true

# Analytics
VITE_GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX
VITE_HOTJAR_ID=your-hotjar-id

# Error Reporting
VITE_SENTRY_DSN=your-frontend-sentry-dsn

# CDN Configuration
VITE_CDN_URL=https://cdn.your-domain.com
VITE_STATIC_URL=https://static.your-domain.com

# Security
VITE_ENABLE_CSP=true
VITE_ALLOWED_HOSTS=your-domain.com,www.your-domain.com

# Performance
VITE_ENABLE_SW=true  # Service Worker
VITE_ENABLE_PWA=true # Progressive Web App
